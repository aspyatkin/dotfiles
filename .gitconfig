[user]
    name = Aleksandr Piatkin
    useconfigonly = true
    signingkey = 372CE806A036164F
[color]
    ui = auto
[push]
    default = current
    autoSetupRemote = true
[core]
    autocrlf = input
    editor = vim
    trustctime = false
    filemode = true
    symlinks = true
[commit]
    gpgsign = true
[pull]
    rebase = true
[alias]
    st = status -sb
    lg = log --oneline --decorate --all --graph
    co = checkout
    cm = commit
    br = branch
    dc = diff --cached
    a = add
    aa = add --all
    p = push
    pt = push --tags
    t = tag
[merge]
    ff = no
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[rebase]
    autostash = true
[init]
    defaultBranch = master
[includeIf "gitdir:~/Projects/github.com/hey-car/"]
    path = ~/Projects/github.com/hey-car/.gitconfig-work
